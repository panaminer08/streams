<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   
  
<%= link_to "New Stream", new_stream_path %>   
<br>   
<br>   
  
<table border="3">   
   <thead>   
      <tr>   
         <th>Candidate Name</th>   
         <th>Download Link</th>   
         <th>Action</th>   
      </tr>   
   </thead>   
      
   <tbody>   
      <% @streams.each do |stream| %>   
            
         <tr>   
            <td><%= stream.name %></td>   
            <td><%= link_to "Download", stream.attachment_url %></td>   
            <td><%= link_to "Delete",  stream, method: :delete, confirm: "Are you sure you want to delete #{stream.name}?" %></td>   
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div>  